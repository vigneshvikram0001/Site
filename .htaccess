RewriteEngine On

# ğŸ” Force HTTPS and www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.vtoofly.online/$1 [L,R=301]

# ğŸ” Redirect URLs with .html to clean URLs
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^(.+)\.html$ https://www.vtoofly.online/$1 [R=301,L]

# ğŸ“‚ Internally serve .html files without requiring extension
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)$ $1.html [L]

# ğŸ  Redirect index.html to homepage
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^index\.html$ https://www.vtoofly.online/ [R=301,L]
